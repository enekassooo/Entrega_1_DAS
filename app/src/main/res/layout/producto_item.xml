<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCoste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coste"
            android:layout_below="@id/textViewProducto"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewCant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:layout_below="@id/textViewCoste"
            android:layout_marginTop="8dp"/>

        <!-- BotÃ³n de eliminar -->
        <Button
            android:id="@+id/buttonEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id_btn_eliminar"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/textViewCant"
            android:layout_marginEnd="8dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
